---
interface Props {
  title: string;
  description?: string;
  slug: string;
  pubDate: Date;
  heroImage?: string;
  tags?: string[];
  pinned?: boolean;
}

const { title, description, slug, pubDate, heroImage, tags, pinned } = Astro.props;

const formattedDate = new Intl.DateTimeFormat('ko-KR', {
  year: 'numeric',
  month: 'long',
  day: 'numeric'
}).format(pubDate);
---

<article class="post-card">
  <a href={`/blog/${slug}`} class="card-link">
    <div class="card-image">
      <img
        src={heroImage || '/images/placeholder.svg'}
        alt={title}
        loading="lazy"
        class:list={[{ 'placeholder': !heroImage }]}
      />
      {pinned && (
        <div class="pin-badge">
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M12 2L15.09 8.26L22 9.27L17 14.14L18.18 21.02L12 17.77L5.82 21.02L7 14.14L2 9.27L8.91 8.26L12 2Z" />
          </svg>
        </div>
      )}
    </div>

    <div class="card-content">
      {tags && tags.length > 0 && (
        <div class="tags">
          {tags.slice(0, 3).map(tag => (
            <span class="tag">{tag}</span>
          ))}
        </div>
      )}

      <h3 class="card-title">{title}</h3>

      {description && (
        <p class="card-description">{description}</p>
      )}

      <div class="card-meta">
        <time datetime={pubDate.toISOString()}>{formattedDate}</time>
      </div>
    </div>
  </a>
</article>

<style>
  .post-card {
    background-color: var(--bg-secondary);
    border: 1px solid var(--border-primary);
    border-radius: var(--radius-md);
    overflow: hidden;
    transition: border-color 0.15s ease, box-shadow 0.15s ease;
    box-shadow: none;
    display: flex;
    flex-direction: column;
    height: 100%;
  }

  .post-card:hover {
    box-shadow: var(--shadow-sm);
    border-color: var(--border-secondary);
  }

  .card-link {
    display: flex;
    flex-direction: column;
    height: 100%;
    color: inherit;
  }

  .card-image {
    position: relative;
    width: 100%;
    aspect-ratio: 1.92 / 1;
    overflow: hidden;
    background-color: var(--bg-hover);
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .card-image img {
    width: 100%;
    height: 100%;
    object-fit: contain;
    transition: transform 0.25s ease;
  }

  .card-image img.placeholder {
    opacity: 0.6;
  }

  .post-card:hover .card-image img:not(.placeholder) {
    transform: scale(1.03);
  }

  .pin-badge {
    position: absolute;
    top: var(--space-md);
    right: var(--space-md);
    width: 28px;
    height: 28px;
    background-color: #ffffff;
    color: var(--text-secondary);
    border: 1px solid var(--border-primary);
    border-radius: 999px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .card-content {
    padding: 0.9rem;
    display: flex;
    flex-direction: column;
    flex: 1;
    min-height: 0;
  }

  .tags {
    display: flex;
    gap: var(--space-sm);
    margin-bottom: 0.625rem;
    flex-wrap: wrap;
    min-height: 32px;
  }

  .tag {
    font-size: var(--text-xs);
    color: rgba(55, 53, 47, 0.8);
    padding: 0.1rem 0.5rem;
    background-color: var(--bg-tag);
    border-radius: var(--radius-sm);
    line-height: 1.5;
  }

  .card-title {
    font-size: 1.12rem;
    font-weight: 600;
    line-height: 1.45;
    margin-bottom: 0.45rem;
    color: var(--text-primary);
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .card-description {
    font-size: var(--text-sm);
    color: var(--text-secondary);
    line-height: 1.55;
    margin-bottom: 0.8rem;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .card-meta {
    display: flex;
    align-items: center;
    gap: var(--space-md);
    margin-top: auto;
  }

  .card-meta time {
    font-size: 0.78rem;
    color: var(--text-tertiary);
  }
</style>
