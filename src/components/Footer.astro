---
const socialLinks = [
  {
    name: 'GitHub',
    url: 'https://github.com/manNomi',
    icon: 'M9 19c-5 1.5-5-2.5-7-3m14 6v-3.87a3.37 3.37 0 0 0-.94-2.61c3.14-.35 6.44-1.54 6.44-7A5.44 5.44 0 0 0 20 4.77 5.07 5.07 0 0 0 19.91 1S18.73.65 16 2.48a13.38 13.38 0 0 0-7 0C6.27.65 5.09 1 5.09 1A5.07 5.07 0 0 0 5 4.77a5.44 5.44 0 0 0-1.5 3.78c0 5.42 3.3 6.61 6.44 7A3.37 3.37 0 0 0 9 18.13V22'
  },
  {
    name: 'Medium',
    url: 'https://medium.com/@hanmw110',
    icon: 'M12 2L2 7l10 5 10-5-10-5zM2 17l10 5 10-5M2 12l10 5 10-5'
  },
  {
    name: 'Velog',
    url: 'https://velog.io/@hanmw110/posts',
    icon: 'M3 3h18v18H3V3zm16 16V5H5v14h14z M7 7h10v2H7V7zm0 4h10v2H7v-2zm0 4h7v2H7v-2z'
  }
];
---

<footer class="footer">
  <div class="container">
    <div class="footer-content">
      <div class="footer-text">
        <p class="name">manNomi</p>
        <p class="description">마법을 믿지 않는 개발자</p>
      </div>

      <div class="social-links">
        {socialLinks.map(link => (
          <a
            href={link.url}
            target="_blank"
            rel="noopener noreferrer"
            class="social-link"
            aria-label={link.name}
          >
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d={link.icon} />
            </svg>
          </a>
        ))}
      </div>
    </div>

    <div class="footer-bottom">
      <p>&copy; 2025 manNomi. All rights reserved.</p>
    </div>
  </div>
</footer>

<style>
  .footer {
    margin-top: var(--space-3xl);
    padding: var(--space-3xl) 0 var(--space-xl);
    background-color: var(--bg-secondary);
    border-top: 1px solid var(--border-primary);
  }

  .footer-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: var(--space-xl);
  }

  .footer-text .name {
    font-size: var(--text-xl);
    font-weight: 700;
    color: var(--text-primary);
    margin-bottom: var(--space-xs);
  }

  .footer-text .description {
    font-size: var(--text-sm);
    color: var(--text-secondary);
  }

  .social-links {
    display: flex;
    gap: var(--space-md);
  }

  .social-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background-color: var(--bg-hover);
    color: var(--text-secondary);
    transition: all 0.3s ease;
  }

  .social-link:hover {
    background-color: var(--accent-primary);
    color: white;
    transform: translateY(-3px);
  }

  .footer-bottom {
    text-align: center;
    padding-top: var(--space-xl);
    border-top: 1px solid var(--border-primary);
  }

  .footer-bottom p {
    font-size: var(--text-sm);
    color: var(--text-tertiary);
  }

  @media (max-width: 768px) {
    .footer-content {
      flex-direction: column;
      gap: var(--space-lg);
      text-align: center;
    }
  }
</style>
