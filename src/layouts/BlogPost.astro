---
import type { CollectionEntry } from 'astro:content';
import BaseLayout from './BaseLayout.astro';
import Header from '../components/Header.astro';
import ViewCounter from '../components/ViewCounter';
import Comments from '../components/Comments';
import ShareButtons from '../components/ShareButtons.astro';
import Footer from '../components/Footer.astro';

type Props = CollectionEntry<'blog'>['data'] & { slug: string; readingTime: number };

const { title, description, pubDate, updatedDate, heroImage, tags, slug, readingTime } = Astro.props;

const formattedDate = new Intl.DateTimeFormat('ko-KR', {
  year: 'numeric',
  month: 'long',
  day: 'numeric'
}).format(pubDate);
---

<BaseLayout
  title={`${title} - manNomi`}
  description={description}
  image={heroImage}
  canonicalURL={`/blog/${slug}`}
>
  <Header />

  <main class="main">
    <article class="article">
      <div class="hero-image">
        <img
          src={heroImage || '/images/placeholder.svg'}
          alt={title}
          class:list={[{ 'placeholder': !heroImage }]}
        />
      </div>

      <div class="content">
        <header class="article-header">
          <h1 class="article-title">{title}</h1>

          <div class="article-meta">
            <time datetime={pubDate.toISOString()}>{formattedDate}</time>
            <span class="reading-time">
              <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <circle cx="12" cy="12" r="10" />
                <polyline points="12 6 12 12 16 14" />
              </svg>
              <span>{readingTime}분</span>
            </span>
            <ViewCounter client:load slug={slug} />
            {updatedDate && (
              <span class="updated">
                수정됨 {new Intl.DateTimeFormat('ko-KR', {
                  year: 'numeric',
                  month: 'long',
                  day: 'numeric'
                }).format(updatedDate)}
              </span>
            )}
          </div>

          {tags && tags.length > 0 && (
            <div class="tags">
              {tags.map(tag => (
                <a href={`/posts?tag=${tag}`} class="tag">{tag}</a>
              ))}
            </div>
          )}
        </header>

        <div class="article-body">
          <slot />
        </div>

        <div class="share-section">
          <ShareButtons title={title} url={`/blog/${slug}`} />
        </div>

        <div class="comments-section">
          <Comments client:load />
        </div>
      </div>
    </article>
  </main>

  <Footer />
</BaseLayout>

<style>
  .main {
    padding-top: calc(var(--header-height) + 1.5rem);
    padding-bottom: var(--space-3xl);
  }

  .article {
    max-width: 100%;
  }

  .hero-image {
    width: 100%;
    max-width: 980px;
    margin: 0 auto 1.8rem;
    aspect-ratio: 2 / 1;
    overflow: hidden;
    border-radius: var(--radius-md);
    border: 1px solid var(--border-primary);
    background-color: var(--bg-hover);
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .hero-image img {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }

  .hero-image img.placeholder {
    opacity: 0.5;
  }

  .content {
    max-width: var(--content-width);
    margin: 0 auto;
    padding: 0 1rem;
  }

  .article-header {
    margin-bottom: 1.5rem;
    padding-bottom: 1rem;
    border-bottom: 1px solid var(--border-primary);
  }

  .article-title {
    font-size: clamp(2rem, 4vw, 2.8rem);
    line-height: 1.2;
    margin-bottom: 0.8rem;
    letter-spacing: -0.02em;
    color: var(--text-primary);
  }

  .article-meta {
    display: flex;
    align-items: center;
    gap: 0.7rem;
    margin-bottom: 0.8rem;
    font-size: 0.82rem;
    color: var(--text-tertiary);
    flex-wrap: wrap;
  }

  .article-meta .reading-time {
    display: flex;
    align-items: center;
    gap: var(--space-xs);
  }

  .article-meta .reading-time::before {
    content: '•';
    margin-right: var(--space-sm);
  }

  .article-meta :global(.view-counter) {
    display: flex;
    align-items: center;
    gap: var(--space-xs);
  }

  .article-meta :global(.view-counter)::before {
    content: '•';
    margin-right: var(--space-sm);
  }

  .updated::before {
    content: '•';
    margin-right: var(--space-md);
  }

  .tags {
    display: flex;
    gap: 0.45rem;
    flex-wrap: wrap;
  }

  .tag {
    padding: 0.1rem 0.5rem;
    background-color: var(--bg-tag);
    border-radius: var(--radius-sm);
    font-size: 0.78rem;
    color: var(--text-secondary);
    text-decoration: none;
    transition: background-color 0.15s ease, color 0.15s ease;
  }

  .tag:hover {
    background-color: #e6f3f8;
    color: var(--accent-primary);
  }

  .article-body {
    font-size: var(--text-base);
    line-height: 1.72;
    color: var(--text-primary);
    word-break: keep-all;
  }

  /* Markdown Styles */
  .article-body :global(h2) {
    font-size: 1.8rem;
    margin-top: 2.8rem;
    margin-bottom: 0.9rem;
    color: var(--text-primary);
    letter-spacing: -0.01em;
  }

  .article-body :global(h3) {
    font-size: 1.35rem;
    margin-top: 1.8rem;
    margin-bottom: 0.6rem;
    color: var(--text-primary);
  }

  .article-body :global(p) {
    margin-bottom: 0.95rem;
  }

  .article-body :global(a) {
    color: var(--accent-primary);
    text-decoration: none;
    border-bottom: 1px solid rgba(11, 110, 153, 0.38);
  }

  .article-body :global(a:hover) {
    color: var(--accent-hover);
    border-bottom-color: var(--accent-hover);
  }

  .article-body :global(ul),
  .article-body :global(ol) {
    margin-bottom: 1rem;
    padding-left: 1.25rem;
  }

  .article-body :global(li) {
    margin-bottom: 0.4rem;
  }

  .article-body :global(code) {
    font-family: var(--font-mono);
    font-size: 0.84em;
    background-color: #f6f6f3;
    padding: 0.12em 0.35em;
    border-radius: var(--radius-sm);
    border: 1px solid #ecece9;
  }

  .article-body :global(pre) {
    margin: 1rem 0;
    padding: 0.9rem;
    background-color: #f7f7f5;
    border-radius: var(--radius-md);
    border: 1px solid #ecece9;
    overflow-x: auto;
  }

  .article-body :global(pre code) {
    background-color: transparent;
    padding: 0;
  }

  .article-body :global(blockquote) {
    margin: 1rem 0;
    padding-left: 0.9rem;
    border-left: 3px solid #d8d8d5;
    color: var(--text-secondary);
    font-style: normal;
  }

  .article-body :global(img) {
    max-width: 100%;
    height: auto;
    margin: 1.2rem auto;
    border-radius: var(--radius-md);
    display: block;
  }

  .article-body :global(hr) {
    margin: 2rem 0;
    border: none;
    border-top: 1px solid var(--border-primary);
  }

  .share-section {
    margin-top: 1.6rem;
    padding-top: 1.3rem;
    border-top: 1px solid var(--border-primary);
    display: flex;
    justify-content: flex-end;
  }

  .comments-section {
    margin-top: 1.6rem;
    padding-top: 1.3rem;
  }

  @media (max-width: 768px) {
    .article-title {
      font-size: var(--text-3xl);
    }

    .hero-image {
      aspect-ratio: 16 / 9;
    }
  }
</style>
