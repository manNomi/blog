---
import { getCollection } from 'astro:content';
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import PostCard from '../components/PostCard.astro';
import Footer from '../components/Footer.astro';
import { extractFirstImage } from '../utils/extractFirstImage';

const allPosts = (await getCollection('blog'))
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
  .map(post => {
    // heroImage가 없으면 콘텐츠에서 추출
    if (!post.data.heroImage && post.body) {
      const extractedImage = extractFirstImage(post.body);
      return {
        ...post,
        data: {
          ...post.data,
          heroImage: extractedImage || undefined
        }
      };
    }
    return post;
  });

const allTags = [...new Set(allPosts.flatMap(post => post.data.tags || []))].sort();

// 태그별 글 개수 계산
const tagCounts = allTags.reduce((acc, tag) => {
  acc[tag] = allPosts.filter(post => post.data.tags?.includes(tag)).length;
  return acc;
}, {} as Record<string, number>);

// 태그가 없으면 전체 글 목록으로 리다이렉트
if (allTags.length === 0) {
  return Astro.redirect('/posts');
}
---

<BaseLayout title="태그별 글 보기 - manNomi" description="태그별로 분류된 기술 블로그 글을 확인하세요">
  <Header />

  <main class="main">
    <div class="container">
      <div class="page-header">
        <h1 class="page-title">태그별 글 보기</h1>
        <p class="page-description">관심있는 태그를 선택하여 글을 찾아보세요</p>
      </div>

      <div class="tags-section">
        <div class="tags-list">
          <button class="tag-tab active" data-tag="all">
            <span class="tag-name">전체</span>
            <span class="tag-count">{allPosts.length}</span>
          </button>
          {allTags.map(tag => (
            <button class="tag-tab" data-tag={tag}>
              <span class="tag-name">{tag}</span>
              <span class="tag-count">{tagCounts[tag]}</span>
            </button>
          ))}
        </div>
      </div>

      <div class="posts-section">
        <div class="section-header">
          <h2 class="section-title">
            <span class="current-tag">전체</span>
            <span class="post-count">({allPosts.length}개의 글)</span>
          </h2>
        </div>

        <div class="posts-grid">
          {allPosts.map(post => (
            <div class="post-item" data-tags={JSON.stringify(post.data.tags || [])}>
              <PostCard
                title={post.data.title}
                description={post.data.description}
                slug={post.slug}
                pubDate={post.data.pubDate}
                heroImage={post.data.heroImage}
                tags={post.data.tags}
              />
            </div>
          ))}
        </div>

        {allPosts.length === 0 && (
          <div class="empty-state">
            <p>아직 작성된 글이 없습니다.</p>
          </div>
        )}
      </div>
    </div>
  </main>

  <Footer />
</BaseLayout>

<style>
  .main {
    padding-top: calc(var(--header-height) + 1.7rem);
    padding-bottom: var(--space-3xl);
    min-height: 100vh;
  }

  .page-header {
    margin-bottom: 1.2rem;
    text-align: left;
  }

  .page-title {
    font-size: 2rem;
    font-weight: 600;
    margin-bottom: 0.32rem;
    letter-spacing: -0.015em;
    color: var(--text-primary);
  }

  .page-description {
    font-size: 0.9rem;
    color: var(--text-secondary);
  }

  .tags-section {
    margin-bottom: 1.2rem;
    padding: 0.85rem;
    background-color: var(--bg-secondary);
    border-radius: var(--radius-md);
    border: 1px solid var(--border-primary);
  }

  .tags-list {
    display: flex;
    gap: 0.45rem;
    flex-wrap: wrap;
    justify-content: flex-start;
  }

  .tag-tab {
    display: flex;
    align-items: center;
    gap: var(--space-sm);
    padding: 0.3rem 0.62rem;
    background-color: var(--bg-primary);
    border: 1px solid var(--border-primary);
    border-radius: var(--radius-sm);
    font-size: 0.8rem;
    color: var(--text-secondary);
    transition: border-color 0.15s ease, background-color 0.15s ease, color 0.15s ease;
    cursor: pointer;
    position: relative;
  }

  .tag-tab:hover {
    border-color: var(--border-secondary);
    background-color: var(--bg-hover);
  }

  .tag-tab.active {
    background-color: #edf5f8;
    border-color: rgba(11, 110, 153, 0.28);
    color: var(--accent-primary);
  }

  .tag-name {
    font-weight: 500;
    font-size: 0.78rem;
  }

  .tag-count {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    min-width: 18px;
    height: 18px;
    padding: 0 0.25rem;
    background-color: var(--bg-tag);
    border-radius: var(--radius-sm);
    font-size: 0.67rem;
    font-weight: 500;
  }

  .tag-tab.active .tag-count {
    background-color: rgba(11, 110, 153, 0.12);
    color: var(--accent-primary);
  }

  .posts-section {
    margin-top: 1rem;
  }

  .section-header {
    margin-bottom: 0.9rem;
    padding-bottom: 0.7rem;
    border-bottom: 1px solid var(--border-primary);
  }

  .section-title {
    font-size: 1.24rem;
    font-weight: 600;
    color: var(--text-primary);
    display: flex;
    align-items: baseline;
    gap: var(--space-sm);
  }

  .current-tag {
    color: var(--text-primary);
  }

  .post-count {
    font-size: 0.85rem;
    font-weight: 400;
    color: var(--text-tertiary);
  }

  .posts-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
    gap: 1rem;
  }

  .post-item {
    opacity: 1;
    animation: fadeIn 0.35s ease;
  }

  .post-item.hidden {
    display: none;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .empty-state {
    text-align: center;
    padding: var(--space-3xl) 0;
    color: var(--text-tertiary);
    font-size: 0.95rem;
  }

  @media (max-width: 768px) {
    .page-title {
      font-size: 1.65rem;
    }

    .tags-section {
      padding: 0.72rem;
    }

    .tags-list {
      justify-content: flex-start;
    }

    .tag-tab {
      padding: 0.25rem 0.52rem;
      font-size: 0.75rem;
    }

    .posts-grid {
      grid-template-columns: 1fr;
    }
  }
</style>

<script>
  const tagTabs = document.querySelectorAll('.tag-tab');
  const postItems = document.querySelectorAll('.post-item');
  const currentTagElement = document.querySelector('.current-tag');
  const postCountElement = document.querySelector('.post-count');

  tagTabs.forEach(button => {
    button.addEventListener('click', () => {
      const selectedTag = button.getAttribute('data-tag');
      const tagName = button.querySelector('.tag-name')?.textContent || '전체';

      // Update active state
      tagTabs.forEach(btn => btn.classList.remove('active'));
      button.classList.add('active');

      // Filter posts with animation
      let visibleCount = 0;
      postItems.forEach((item, index) => {
        const postTags = JSON.parse(item.getAttribute('data-tags') || '[]');

        if (selectedTag === 'all' || postTags.includes(selectedTag)) {
          item.classList.remove('hidden');
          // Stagger animation
          (item as HTMLElement).style.animationDelay = `${index * 0.05}s`;
          visibleCount++;
        } else {
          item.classList.add('hidden');
        }
      });

      // Update section title
      if (currentTagElement) {
        currentTagElement.textContent = tagName;
      }
      if (postCountElement) {
        postCountElement.textContent = `(${visibleCount}개의 글)`;
      }

      // Smooth scroll to posts section
      document.querySelector('.posts-section')?.scrollIntoView({
        behavior: 'smooth',
        block: 'start'
      });
    });
  });
</script>
