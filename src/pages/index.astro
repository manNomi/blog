---
import { getCollection } from 'astro:content';
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import PostCard from '../components/PostCard.astro';

const allPosts = (await getCollection('blog')).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);

const pinnedPosts = allPosts.filter(post => post.data.pinned).slice(0, 3);
const recentPosts = allPosts.slice(0, 5);
---

<BaseLayout title="manNomi 기술 블로그" description="개발 경험과 기술을 기록합니다">
  <Header />

  <main class="main">
    <section class="hero">
      <div class="container">
        <div class="hero-content">
          <h1 class="hero-title">마법을 믿지 않는 개발자</h1>
          <p class="hero-description">
            웹 프론트엔드 개발자로 무엇이 어떻게 왜 작동하는지 철저히 탐구합니다.
          </p>
        </div>
      </div>
    </section>

    {pinnedPosts.length > 0 && (
      <section class="section">
        <div class="container">
          <h2 class="section-title">주요 글</h2>
          <div class="grid">
            {pinnedPosts.map(post => (
              <PostCard
                title={post.data.title}
                description={post.data.description}
                slug={post.slug}
                pubDate={post.data.pubDate}
                heroImage={post.data.heroImage}
                tags={post.data.tags}
                pinned={true}
              />
            ))}
          </div>
        </div>
      </section>
    )}

    <section class="section">
      <div class="container">
        <h2 class="section-title">최신 글</h2>
        <div class="recent-list">
          {recentPosts.map(post => (
            <article class="recent-item">
              <a href={`/blog/${post.slug}`} class="recent-link">
                {post.data.heroImage && (
                  <div class="recent-thumb">
                    <img src={post.data.heroImage} alt={post.data.title} loading="lazy" />
                  </div>
                )}
                <div class="recent-info">
                  <h3 class="recent-title">{post.data.title}</h3>
                  <time class="recent-date">
                    {new Intl.DateTimeFormat('ko-KR', {
                      year: 'numeric',
                      month: 'long',
                      day: 'numeric'
                    }).format(post.data.pubDate)}
                  </time>
                </div>
              </a>
            </article>
          ))}
        </div>
      </div>
    </section>
  </main>
</BaseLayout>

<style>
  .main {
    padding-top: var(--header-height);
  }

  .hero {
    padding: var(--space-3xl) 0;
    background: linear-gradient(135deg, var(--bg-primary) 0%, var(--bg-hover) 100%);
  }

  .hero-content {
    max-width: 600px;
  }

  .hero-title {
    font-size: var(--text-4xl);
    margin-bottom: var(--space-lg);
    color: var(--text-primary);
  }

  .hero-description {
    font-size: var(--text-lg);
    color: var(--text-secondary);
    line-height: 1.8;
  }

  .section {
    padding: var(--space-3xl) 0;
  }

  .section-title {
    font-size: var(--text-2xl);
    margin-bottom: var(--space-xl);
    color: var(--text-primary);
  }

  .grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: var(--space-xl);
  }

  .recent-list {
    display: flex;
    flex-direction: column;
    gap: var(--space-lg);
  }

  .recent-item {
    background-color: var(--bg-secondary);
    border: 1px solid var(--border-primary);
    border-radius: var(--radius-md);
    overflow: hidden;
    transition: all 0.2s;
  }

  .recent-item:hover {
    border-color: var(--border-secondary);
    box-shadow: var(--shadow-sm);
  }

  .recent-link {
    display: flex;
    align-items: center;
    gap: var(--space-lg);
    padding: var(--space-lg);
  }

  .recent-thumb {
    flex-shrink: 0;
    width: 120px;
    height: 80px;
    border-radius: var(--radius-sm);
    overflow: hidden;
    background-color: var(--bg-hover);
  }

  .recent-thumb img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .recent-info {
    flex: 1;
  }

  .recent-title {
    font-size: var(--text-lg);
    font-weight: 600;
    margin-bottom: var(--space-sm);
    color: var(--text-primary);
  }

  .recent-date {
    font-size: var(--text-sm);
    color: var(--text-tertiary);
  }

  @media (max-width: 768px) {
    .hero {
      padding: var(--space-2xl) 0;
    }

    .grid {
      grid-template-columns: 1fr;
    }

    .recent-link {
      flex-direction: column;
      align-items: flex-start;
    }

    .recent-thumb {
      width: 100%;
      height: 180px;
    }
  }
</style>
