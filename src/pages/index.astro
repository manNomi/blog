---
import { getCollection } from 'astro:content';
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import PostCard from '../components/PostCard.astro';
import Footer from '../components/Footer.astro';
import { extractFirstImage } from '../utils/extractFirstImage';

const allPosts = (await getCollection('blog'))
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
  .map(post => {
    // heroImage가 없으면 콘텐츠에서 추출
    if (!post.data.heroImage && post.body) {
      const extractedImage = extractFirstImage(post.body);
      return {
        ...post,
        data: {
          ...post.data,
          heroImage: extractedImage || undefined
        }
      };
    }
    return post;
  });

const pinnedPosts = allPosts.filter(post => post.data.pinned).slice(0, 3);
const recentPosts = allPosts.slice(0, 5);
---

<BaseLayout title="manNomi 기술 블로그" description="개발 경험과 기술을 기록합니다">
  <Header />

  <main class="main">
    <section class="hero">
      <div class="container">
        <div class="hero-content fade-in">
          <div class="hero-badge">Frontend Developer</div>
          <h1 class="hero-title">
            <span class="gradient-text">마법을 믿지 않는</span>
            <br />
            프론트엔드 개발자
          </h1>
          <ul class="hero-features">
            <li class="feature-item">
              <svg class="feature-icon" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <polyline points="20 6 9 17 4 12" />
              </svg>
              <span>마법이 아닌 숫자를 믿습니다</span>
            </li>
            <li class="feature-item">
              <svg class="feature-icon" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <polyline points="20 6 9 17 4 12" />
              </svg>
              <span>항상 능동적으로 문제를 인식하고 해결합니다</span>
            </li>
            <li class="feature-item">
              <svg class="feature-icon" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <polyline points="20 6 9 17 4 12" />
              </svg>
              <span>DX 상승을 위한 자동화를 공부하고 있습니다</span>
            </li>
          </ul>
          <div class="hero-stats">
            <div class="stat-item">
              <div class="stat-value">{allPosts.length}</div>
              <div class="stat-label">글</div>
            </div>
            <div class="stat-divider"></div>
            <div class="stat-item">
              <div class="stat-value">{new Set(allPosts.flatMap(p => p.data.tags || [])).size}</div>
              <div class="stat-label">주제</div>
            </div>
          </div>
        </div>
      </div>
      <div class="hero-bg"></div>
    </section>

    {pinnedPosts.length > 0 && (
      <section class="section fade-in-up">
        <div class="container">
          <div class="section-header">
            <h2 class="section-title">주요 글</h2>
            <p class="section-subtitle">중요한 글들을 모았습니다</p>
          </div>
          <div class="grid">
            {pinnedPosts.map((post, index) => (
              <div class="card-wrapper" style={`animation-delay: ${index * 0.1}s`}>
                <PostCard
                  title={post.data.title}
                  description={post.data.description}
                  slug={post.slug}
                  pubDate={post.data.pubDate}
                  heroImage={post.data.heroImage}
                  tags={post.data.tags}
                  pinned={true}
                />
              </div>
            ))}
          </div>
        </div>
      </section>
    )}

    <section class="section section-alt fade-in-up">
      <div class="container">
        <div class="section-header">
          <h2 class="section-title">최신 글</h2>
          <a href="/posts" class="view-all">
            전체 보기
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <polyline points="9 18 15 12 9 6" />
            </svg>
          </a>
        </div>
        <div class="recent-list">
          {recentPosts.map((post, index) => (
            <article class="recent-item" style={`animation-delay: ${index * 0.1}s`}>
              <a href={`/blog/${post.slug}`} class="recent-link">
                <div class="recent-thumb">
                  <img
                    src={post.data.heroImage || '/images/placeholder.svg'}
                    alt={post.data.title}
                    loading="lazy"
                    class:list={[{ 'placeholder': !post.data.heroImage }]}
                  />
                </div>
                <div class="recent-info">
                  <h3 class="recent-title">{post.data.title}</h3>
                  {post.data.description && (
                    <p class="recent-description">{post.data.description}</p>
                  )}
                  <div class="recent-meta">
                    <time class="recent-date">
                      {new Intl.DateTimeFormat('ko-KR', {
                        year: 'numeric',
                        month: 'long',
                        day: 'numeric'
                      }).format(post.data.pubDate)}
                    </time>
                    {post.data.tags && post.data.tags.length > 0 && (
                      <div class="recent-tags">
                        {post.data.tags.slice(0, 2).map(tag => (
                          <span class="tag-mini">{tag}</span>
                        ))}
                      </div>
                    )}
                  </div>
                </div>
              </a>
            </article>
          ))}
        </div>
      </div>
    </section>
  </main>

  <Footer />
</BaseLayout>

<style>
  .main {
    padding-top: var(--header-height);
    background: linear-gradient(180deg, #ffffff 0%, #fcfcfb 100%);
  }

  .hero {
    position: relative;
    padding: 4.5rem 0 2.5rem;
    overflow: hidden;
    border-bottom: 1px solid var(--border-primary);
  }

  .hero-bg {
    position: absolute;
    top: -20%;
    right: 0;
    width: 48%;
    height: 130%;
    background: radial-gradient(circle at 30% 40%, rgba(11, 110, 153, 0.08), transparent 68%);
    opacity: 1;
    z-index: 0;
    pointer-events: none;
  }

  .hero-content {
    position: relative;
    z-index: 1;
    max-width: 760px;
  }

  .hero-badge {
    display: inline-block;
    padding: 0.2rem 0.55rem;
    background-color: var(--bg-secondary);
    border: 1px solid var(--border-primary);
    border-radius: 999px;
    font-size: 0.72rem;
    font-weight: 500;
    color: var(--text-secondary);
    margin-bottom: 0.9rem;
    letter-spacing: 0.01em;
  }

  .hero-title {
    font-size: clamp(2.2rem, 5vw, 3.5rem);
    margin-bottom: 0.85rem;
    color: var(--text-primary);
    line-height: 1.13;
    font-weight: 600;
    letter-spacing: -0.02em;
  }

  .gradient-text {
    color: var(--text-primary);
  }

  .hero-features {
    list-style: none;
    padding: 0;
    margin: 0 0 1.25rem 0;
    display: flex;
    flex-direction: column;
    gap: 0.6rem;
  }

  .feature-item {
    display: flex;
    align-items: center;
    gap: 0.55rem;
    font-size: 0.95rem;
    color: var(--text-secondary);
    line-height: 1.55;
    padding: 0.15rem 0;
  }

  .feature-icon {
    flex-shrink: 0;
    width: 18px;
    height: 18px;
    color: var(--text-tertiary);
    stroke-width: 2;
  }

  .hero-stats {
    display: flex;
    gap: 0.9rem;
    align-items: center;
    padding: 0.55rem 0.7rem;
    border: 1px solid var(--border-primary);
    border-radius: var(--radius-md);
    width: fit-content;
    background-color: rgba(255, 255, 255, 0.72);
  }

  .stat-item {
    text-align: center;
  }

  .stat-value {
    font-size: 1.05rem;
    font-weight: 600;
    color: var(--text-primary);
    margin-bottom: 0;
  }

  .stat-label {
    font-size: 0.75rem;
    color: var(--text-tertiary);
  }

  .stat-divider {
    width: 1px;
    height: 24px;
    background-color: var(--border-primary);
  }

  .section {
    padding: 2.4rem 0;
  }

  .section-alt {
    background-color: #fcfcfb;
    border-top: 1px solid var(--border-primary);
    border-bottom: 1px solid var(--border-primary);
  }

  .section-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1.2rem;
  }

  .section-title {
    font-size: 1.5rem;
    color: var(--text-primary);
    font-weight: 600;
    letter-spacing: -0.01em;
  }

  .section-subtitle {
    font-size: 0.88rem;
    color: var(--text-secondary);
    margin-top: 0.15rem;
  }

  .view-all {
    display: flex;
    align-items: center;
    gap: var(--space-xs);
    color: var(--text-secondary);
    font-size: 0.8rem;
    font-weight: 500;
    transition: color 0.15s ease, gap 0.15s ease;
  }

  .view-all:hover {
    gap: var(--space-sm);
    color: var(--text-primary);
  }

  .grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
    gap: 1rem;
  }

  .card-wrapper {
    animation: fadeInUp 0.42s ease forwards;
    opacity: 0.01;
  }

  .recent-list {
    display: flex;
    flex-direction: column;
    gap: 0.7rem;
  }

  .recent-item {
    background-color: var(--bg-primary);
    border: 1px solid var(--border-primary);
    border-radius: var(--radius-md);
    overflow: hidden;
    transition: border-color 0.15s ease, box-shadow 0.15s ease;
    animation: fadeInUp 0.42s ease forwards;
    opacity: 0.01;
  }

  .recent-item:hover {
    border-color: var(--border-secondary);
    box-shadow: var(--shadow-sm);
  }

  .recent-link {
    display: flex;
    align-items: center;
    gap: 0.9rem;
    padding: 0.85rem;
  }

  .recent-thumb {
    flex-shrink: 0;
    width: 170px;
    height: 108px;
    border-radius: var(--radius-sm);
    overflow: hidden;
    background-color: var(--bg-hover);
    border: 1px solid var(--border-primary);
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .recent-thumb img {
    width: 100%;
    height: 100%;
    object-fit: contain;
    transition: transform 0.25s ease;
  }

  .recent-thumb img.placeholder {
    opacity: 0.6;
  }

  .recent-item:hover .recent-thumb img:not(.placeholder) {
    transform: scale(1.03);
  }

  .recent-info {
    flex: 1;
  }

  .recent-title {
    font-size: 1rem;
    font-weight: 600;
    margin-bottom: 0.25rem;
    color: var(--text-primary);
    line-height: 1.42;
  }

  .recent-description {
    font-size: 0.82rem;
    color: var(--text-secondary);
    margin-bottom: 0.45rem;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .recent-meta {
    display: flex;
    align-items: center;
    gap: 0.65rem;
  }

  .recent-date {
    font-size: 0.75rem;
    color: var(--text-tertiary);
  }

  .recent-tags {
    display: flex;
    gap: 0.35rem;
  }

  .tag-mini {
    padding: 0.08rem 0.4rem;
    background-color: var(--bg-tag);
    border-radius: var(--radius-sm);
    font-size: 0.69rem;
    color: var(--text-secondary);
    line-height: 1.5;
  }

  /* Animations */
  @keyframes fadeIn {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .fade-in {
    animation: fadeIn 1s ease forwards;
  }

  .fade-in-up {
    animation: fadeInUp 0.8s ease forwards;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .hero {
      padding: 2.7rem 0 1.5rem;
    }

    .hero-title {
      font-size: 2rem;
    }

    .hero-stats {
      width: 100%;
      justify-content: center;
    }

    .section-header {
      flex-direction: column;
      align-items: flex-start;
      gap: var(--space-md);
    }

    .grid {
      grid-template-columns: 1fr;
    }

    .recent-link {
      flex-direction: column;
      align-items: flex-start;
      gap: 0.65rem;
    }

    .recent-thumb {
      width: 100%;
      height: 180px;
    }
  }
</style>
