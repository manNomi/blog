---
import { getCollection } from 'astro:content';
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import PostCard from '../components/PostCard.astro';
import Footer from '../components/Footer.astro';
import { extractFirstImage } from '../utils/extractFirstImage';

const allPosts = (await getCollection('blog'))
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
  .map(post => {
    // heroImage가 없으면 콘텐츠에서 추출
    if (!post.data.heroImage && post.body) {
      const extractedImage = extractFirstImage(post.body);
      return {
        ...post,
        data: {
          ...post.data,
          heroImage: extractedImage || undefined
        }
      };
    }
    return post;
  });

const allTags = [...new Set(allPosts.flatMap(post => post.data.tags || []))];

// 태그별 글 개수 계산
const tagCounts = allTags.reduce((acc, tag) => {
  acc[tag] = allPosts.filter(post => post.data.tags?.includes(tag)).length;
  return acc;
}, {} as Record<string, number>);
---

<BaseLayout title="전체 글 목록 - manNomi" description="모든 기술 블로그 글을 확인하세요">
  <Header />

  <main class="main">
    <div class="container">
      <div class="page-header">
        <h1 class="page-title">전체 글</h1>
        <p class="page-description">총 {allPosts.length}개의 글</p>
      </div>

      {allTags.length > 0 && (
        <div class="filter-section">
          <h2 class="filter-title">태그로 찾기</h2>
          <div class="tags">
            <button class="tag-filter active" data-tag="all">
              <span class="tag-name">전체</span>
              <span class="tag-count">{allPosts.length}</span>
            </button>
            {allTags.map(tag => (
              <button class="tag-filter" data-tag={tag}>
                <span class="tag-name">{tag}</span>
                <span class="tag-count">{tagCounts[tag]}</span>
              </button>
            ))}
          </div>
        </div>
      )}

      <div class="posts-grid">
        {allPosts.map(post => (
          <div class="post-item" data-tags={JSON.stringify(post.data.tags || [])}>
            <PostCard
              title={post.data.title}
              description={post.data.description}
              slug={post.slug}
              pubDate={post.data.pubDate}
              heroImage={post.data.heroImage}
              tags={post.data.tags}
            />
          </div>
        ))}
      </div>

      {allPosts.length === 0 && (
        <div class="empty-state">
          <p>아직 작성된 글이 없습니다.</p>
        </div>
      )}
    </div>
  </main>

  <Footer />
</BaseLayout>

<style>
  .main {
    padding-top: calc(var(--header-height) + 1.7rem);
    padding-bottom: var(--space-3xl);
    min-height: 100vh;
  }

  .page-header {
    margin-bottom: 1.25rem;
  }

  .page-title {
    font-size: 2rem;
    margin-bottom: 0.35rem;
    font-weight: 600;
    letter-spacing: -0.015em;
    color: var(--text-primary);
  }

  .page-description {
    font-size: 0.9rem;
    color: var(--text-secondary);
  }

  .filter-section {
    margin-bottom: 1.2rem;
    padding: 0.85rem;
    background-color: var(--bg-secondary);
    border-radius: var(--radius-md);
    border: 1px solid var(--border-primary);
  }

  .filter-title {
    font-size: 0.84rem;
    font-weight: 500;
    margin-bottom: 0.6rem;
    color: var(--text-primary);
  }

  .tags {
    display: flex;
    gap: 0.45rem;
    flex-wrap: wrap;
  }

  .tag-filter {
    display: flex;
    align-items: center;
    gap: var(--space-sm);
    padding: 0.28rem 0.58rem;
    background-color: var(--bg-primary);
    border: 1px solid var(--border-primary);
    border-radius: var(--radius-sm);
    font-size: 0.78rem;
    color: var(--text-secondary);
    transition: border-color 0.15s ease, background-color 0.15s ease, color 0.15s ease;
    cursor: pointer;
  }

  .tag-filter:hover {
    border-color: var(--border-secondary);
    background-color: var(--bg-hover);
  }

  .tag-filter.active {
    background-color: #edf5f8;
    border-color: rgba(11, 110, 153, 0.28);
    color: var(--accent-primary);
  }

  .tag-name {
    font-weight: 500;
  }

  .tag-count {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    min-width: 18px;
    height: 18px;
    padding: 0 0.25rem;
    background-color: var(--bg-tag);
    border-radius: var(--radius-sm);
    font-size: 0.67rem;
    font-weight: 500;
  }

  .tag-filter.active .tag-count {
    background-color: rgba(11, 110, 153, 0.12);
    color: var(--accent-primary);
  }

  .posts-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
    gap: 1rem;
  }

  .post-item {
    opacity: 1;
    animation: fadeIn 0.35s ease;
  }

  .post-item.hidden {
    display: none;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .empty-state {
    text-align: center;
    padding: var(--space-3xl) 0;
    color: var(--text-tertiary);
  }

  @media (max-width: 768px) {
    .posts-grid {
      grid-template-columns: 1fr;
    }
  }
</style>

<script>
  const tagFilters = document.querySelectorAll('.tag-filter');
  const postItems = document.querySelectorAll('.post-item');

  tagFilters.forEach(button => {
    button.addEventListener('click', () => {
      const selectedTag = button.getAttribute('data-tag');

      // Update active state
      tagFilters.forEach(btn => btn.classList.remove('active'));
      button.classList.add('active');

      // Filter posts with animation
      postItems.forEach((item, index) => {
        const postTags = JSON.parse(item.getAttribute('data-tags') || '[]');

        if (selectedTag === 'all' || postTags.includes(selectedTag)) {
          item.classList.remove('hidden');
          // Stagger animation
          (item as HTMLElement).style.animationDelay = `${index * 0.05}s`;
        } else {
          item.classList.add('hidden');
        }
      });
    });
  });
</script>
